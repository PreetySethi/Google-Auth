<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .vertical-scroll {
      height: 40px;
      overflow: hidden;
      position: relative;
      background: #e0f7fa;
      color: #00796b;
      font-weight: 500;
    }

    .vertical-scroll p {
      position: absolute;
      width: 100%;
      height: 100%;
      margin: 0;
      line-height: 40px;
      text-align: center;
      transform: translateY(-100%);
      animation: scroll-down 2s ease forwards;
    }

    @keyframes scroll-down {
      0% { transform: translateY(-100%); }
      100% { transform: translateY(0%); }
    }

    .dashboard-box {
      background-color: #fff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
      transition: 0.3s ease-in-out;
    }

    .dashboard-box:hover {
      box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
  </style>
</head>
<body class="bg-light">

  <!-- âœ… Navbar -->
  <nav class="navbar navbar-light bg-white shadow-sm px-4">
    <span class="navbar-brand fw-bold">Welcome, <%= user.displayName %></span>
    <a class="btn btn-outline-danger" href="/logout">Logout</a>
  </nav>

  <!-- ðŸŽ‰ Scrolling Login Message -->
  <div class="vertical-scroll">
    <p>ðŸŽ‰ Congratulations! You successfully logged in.</p>
  </div>

  <!-- ðŸ“Š Dashboard -->
  <div class="container mt-5">
    <div class="row mb-4 justify-content-center">
      <div class="col-md-4 text-center">
        <img src="<%= user.photos[0].value %>" class="rounded-circle mb-3" width="100" />
        <h4><%= user.displayName %></h4>
        <p class="text-muted mb-0"><%= user.emails[0].value %></p>
        <span class="badge bg-success mt-2">Authenticated</span>
      </div>
    </div>

    <!-- ðŸ§¾ Info Cards -->
    <div class="row text-center g-4 mb-5">
      <div class="col-md-4">
        <div class="dashboard-box">
          <h5>Account Type</h5>
          <p>Google OAuth</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="dashboard-box">
          <h5>Last Login</h5>
          <p>Just now</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="dashboard-box">
          <h5>User Status</h5>
          <p>Active</p>
        </div>
      </div>
    </div>

    <!-- ðŸ“… Activity Section -->
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="dashboard-box">
          <h5 class="mb-3">ðŸ“… Recent Activity</h5>
          <ul class="list-group text-start">
            <li class="list-group-item">âœ… Logged in via Google</li>
            <li class="list-group-item">ðŸ“§ Email verified</li>
            <li class="list-group-item">ðŸ‘¤ Profile fetched</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
